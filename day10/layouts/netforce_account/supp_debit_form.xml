<form model="account.invoice" attrs='{"readonly":[["state","in",["waiting_payment","paid","voided"]]]}' model_string="Debit Note" show_company="1">
    <head>
        <field name="state"/>
        <button string="Print" icon="print" action="report_supp_debit_form"/>
        <button string="Options" dropdown="1">
            <item string="Copy" method="copy"/>
            <item string="Void" method="void" confirm="Are you sure you want to void this invoice?" states="waiting_payment"/>
            <item string="To Draft" method="to_draft" states="waiting_payment"/>
            <divider/>
            <item string="View Journal Entry" method="view_journal_entry" states="waiting_payment,paid"/>
        </button>
    </head>
    <tabs>
    <tab string="General">
    <group form_layout="stacked">
        <field name="contact_id" span="2" onchange="onchange_contact" condition='[["supplier", "=", "True"]]'/>
        <field name="date" span="2" onchange="onchange_date"/>
        <field name="due_date" span="2"/>
        <field name="number" required="1" span="2"/>
        <field name="ref" span="2"/>
        <newline/>
        <field name="currency_id" span="2"/>
        <field name="currency_rate" span="2"/>
        <field name="tax_type" span="2" onchange="onchange_tax_type"/>
        <field name="tax_no" span="2"/>
        <field name="payment_terms_id" span="2" condition='[["type","=","purchase"]]' onchange="update_duedate"/>
        <field name="related_id" span="2"/>
        <template span="2">
            <div class="form-group nf-field field-original_invoice_id">
                <label class="control-label ">
                    <span class="label-text">
                        Original Invoice
                    </span>
                </label>
                <div class=" nf-controls">
                    <span>
                        {{#if context.data.original_invoice_id}}
                            {{context.data.original_invoice_id.1.}},{{context.data.original_invoice_id.2.}}{{context.data.original_invoice_date}}
                            <a href="#name=view_invoice&amp;active_id={{context.data.original_invoice_id.0.}}&amp;mode=form" target="_blank" style="text-decoration:none;margin-left:5px"><i class="icon-arrow-right"></i></a>
                        {{/if}}
                    </span>
                <ul class="typeahead dropdown-menu"></ul>
                </div>
            </div>
        </template>
        <field name="original_invoice_id" invisible="1" span="2"/>
        <field name="original_invoice_date" invisible="1" span="2"/>
        <newline/>
    </group>
    <field name="lines" count="10" nolabel="1">
        <list onchange="update_amounts">
            <field name="product_id" onchange="onchange_product"/>
            <field name="description"/>
            <field name="qty" onchange="update_amounts"/>
            <field name="uom_id" onchange="update_amounts"/>
            <field name="unit_price" onchange="update_amounts"/>
            <field name="discount" onchange="update_amounts"/>
            <field name="discount_amount" onchange="update_amounts"/>
            <field name="account_id" onchange="onchange_account" condition='[["type","!=","view"],["company_id","=",parent.company_id]]'/>
            <field name="tax_id" onchange="update_amounts" condition='[["type","=","in"]]'/>
            <field name="track_id"/>
            <field name="track2_id"/>
            <field name="amount" attrs='{"readonly":[["unit_price","!=",null]]}' onchange="update_amounts"/>
        </list>
    </field>
    <group span="8">
        <field name="memo" span="8"/>
    </group>
    <group offset="8" span="4" columns="1">
        <field name="amount_subtotal_org_inv"/>
        <field name="amount_remaining_inv"/>
        <field name="amount_subtotal" string="Balance (1) + (2)"/>
        <field name="amount_tax"/>
        <field name="amount_total"/>
        <field name="credit_notes">
            <fields>
                <field name="credit_id"/>
                <field name="credit_type"/>
                <field name="amount"/>
            </fields>
            <template>
                {{#each context.data}}
                    <div class="form-group nf-field">
                        <label class="control-label col-md-4">
                            {{#ifeq credit_type "credit"}}
                                Less <a href="#name=view_invoice&amp;active_id={{credit_id.0.}}">Credit Note</a>
                            {{/ifeq}}
                            {{#ifeq credit_type "prepay"}}
                                Less <a href="#name=view_invoice&amp;active_id={{credit_id.0.}}">Prepayment</a>
                            {{/ifeq}}
                            {{#ifeq credit_type "overpay"}}
                                Less <a href="#name=view_invoice&amp;active_id={credit_id.0.}}">Overpayment</a>
                            {{/ifeq}}
                        </label>
                        <div class="col-md-8" style="text-align:right">
                            {{currency amount}}
                        </div>
                    </div>
                {{/each}}
            </template>
        </field>
        <field name="payments">
            <fields>
                <field name="payment_id"/>
                <field name="amount_currency"/>
            </fields>
            <template>
                {{#each context.data}}
                    <div class="form-group nf-field">
                        <label class="control-label col-md-4">Less <a href="#name=supplier_payment&amp;mode=form&amp;active_id={{payment_id.0.}}">Payment</a></label>
                        <div class="col-md-8" style="text-align:right">
                            {{currency amount_currency}}
                        </div>
                    </div>
                {{/each}}
            </template>
        </field>
        <field name="amount_due" states="waiting_payment,paid"/>
    </group>
    </tab>
    <tab string="Taxes">
        <field name="taxes">
            <list>
                <field name="tax_comp_id"/>
                <field name="base_amount"/>
                <field name="tax_amount"/>
                <field name="tax_no"/>
                <field name="tax_date"/>
            </list>
        </field>
        <button string="Calculate Taxes" method="calc_taxes" icon="pencil"/>
    </tab>
    <tab string="Other Info">
        <field name="journal_id" onchange="onchange_journal"/>
        <newline/>
        <field name="sequence_id" condition='[["type","=","cust_credit"]]' onchange="onchange_sequence"/>
        <newline/>
    </tab>
    </tabs>
    <field name="type" invisible="1"/>
    <field name="inv_type" invisible="1"/>
    <field name="contact_credit" invisible="1"/>
    <field name="company_id" invisible="1"/>
    <foot states="draft,waiting_approval" replace="1">
        <button string="Save" split="1" method="_save" size="large" type="primary">
            <item string="Save &amp; submit for approval" method="submit_for_approval"/>
        </button>
        <button string="Approve" method="approve" size="large" type="success" perm="approve_invoice"/>
    </foot>
    <related>
        <template states="waiting_payment">
            {{#if context.data.contact_credit}}
                <div style="background-color:#eee;font-size:12px;margin-bottom:10px;padding:5px 10px">
                    {{context.data.contact_id.1.}} has {{currency context.data.contact_credit}} in outstanding credit.
                    <a href="#name=credit_invoice&amp;invoice_id={{context.data.id}}">Credit this invoice</a>
                </div>
            {{/if}}
        </template>
        <action name="invoice_payment" states="waiting_payment"/>
        <field name="documents">
            <list>
                <field name="file" target="_blank" preview="1"/>
                <field name="categ_id"/>
                <field name="description"/>
                <field name="date"/>
            </list>
            <form>
                <field name="categ_id"/>
                <field name="file" target="_blank" onchange="onchange_file"/>
                <field name="date"/>
                <field name="description"/>
                <field name="contact_id" invisible="1"/>
            </form>
        </field>
        <field name="comments"/>
    </related>
</form>
