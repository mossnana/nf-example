<form model="kao.popup">
    <field name="kao_id" invisible="1"/>
    <field name="contact_id"/>
    <field name="number"/>
    <field name="date"/>
    <field name="line" nolabel="1">
        <list noadd="1" noremove="1">
            <field name="product_id"/>
            <field name="amount"/>
            <field name="price"/>
            <field name="total"/>
        </list>
    </field>
    <foot>
        <button string="Approve" method="approve" type="success"/>
    </foot>
</form>

